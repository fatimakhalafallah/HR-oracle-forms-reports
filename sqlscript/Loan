CREATE TABLE PAY_LOAN_MASTR2 ( 
  EMPLOYEE_LOAN_SERIAL   VARCHAR2 (60), 
  EMPLOYEE_NO            NUMBER (8), 
  PAY_LOAN_TYPES_ID      NUMBER (3), 
  TRANS_TYPE_NO          NUMBER (2), 
  MAXIMUM_MONTH_ALLOWED  NUMBER (3), 
  START_DATE             DATE, 
  END_DATE               DATE, 
  CURRENCY_NO            NUMBER (2), 
  TOTAL_AMOUNT           NUMBER (12,2), 
  EQU_TOTAL_AMOUNT       NUMBER (12,2), 
  MONTHLY_DEDUCTION      NUMBER (12,2), 
  EQU_MONTHLY_DEDUCTION  NUMBER (12,2), 
  LOAN_STATUS            NUMBER (1), 
  MORTAGE_AMOUNT         NUMBER (12,2), 
  EQ_MORTAGE_AMOUNT      NUMBER (12,2), 
  MORTAGE_DATE           DATE, 
  GRAND_TOTAL            NUMBER (12,2), 
  EQ_GRAND_TOTAL         NUMBER (12,2), 
  ID                     NUMBER (9), 
  CREATED_USER           NUMBER (5), 
  CREATED_DATE           DATE, 
  MODIFIED_USER          NUMBER (5), 
  MODIFIED_DATE          DATE, 
  EQU_ADJUESTMENT_AMT    NUMBER (14,2), 
  ADJUESTMENT_AMT        NUMBER (14,2), 
  ESB                    NUMBER (14,2), 
  EQ_ESB                 NUMBER (14,2), 
  OLD_MONTHLY_DEDUCTION  NUMBER (12,2), 
  COMP_NO                NUMBER (5), 
  REMARK                 VARCHAR2 (200) ) ; 
CREATE TABLE PAY_LOAN_DTL ( 
  EMP_LOAN_SERIAL    VARCHAR2 (20)  NOT NULL, 
  TRANS_DATE         DATE          NOT NULL, 
  CURRENCY_NO        NUMBER (2), 
  AMOUNT             NUMBER (12,2), 
  EAMOUNT            NUMBER (12,2), 
  ID                 NUMBER (9)    NOT NULL, 
  PAY_ID             NUMBER, 
  PAY_LOAN_MASTR_ID  NUMBER (9), 
  PRIMARY KEY ( ID, EMP_LOAN_SERIAL, TRANS_DATE ) ) ; 

ALTER TABLE PAY_LOAN_DTL ADD  CONSTRAINT PAY_LOAN_DTL_R01
 FOREIGN KEY (PAY_LOAN_MASTR_ID) 
  REFERENCES PETRO.PAY_LOAN_MASTR (ID) ;

